<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:CopyLess.ViewModels"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="80"
             x:DataType="vm:CardViewModel"
             x:Class="CopyLess.Views.CardView">
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="Auto" />
      </Grid.ColumnDefinitions>
      <TextBlock Grid.Column="0"
                 FontSize="13"
                 Text="{Binding Text}"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Margin="8 8" />
      <Grid Grid.Column="1" Width="32">
        <Grid.RowDefinitions>
          <RowDefinition Height="*" />
          <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Grid.Row="0"
                Width="32"
                Height="32"
                Padding="4"
                Background="Transparent"
                BorderBrush="Transparent"
                VerticalAlignment="Top"
                ToolTip.Tip="See more">
          <ui:SymbolIcon Symbol="More" FontSize="16" />
        </Button>
        <ToggleButton Grid.Row="1"
                      Width="32"
                      Height="32"
                      Padding="4"
                      Background="Transparent"
                      BorderBrush="Transparent"
                      VerticalAlignment="Bottom"
                      IsChecked="{Binding Pinned, Mode=OneWay}"
                      Command="{Binding TogglePinnedCommand}">
          <Panel>
            <ui:SymbolIcon Classes="pin" Symbol="UnPin" FontSize="16" />
            <ui:SymbolIcon Classes="unpin" Symbol="Pin" FontSize="16" />
          </Panel>
          <ToggleButton.Styles>
            <Style Selector="ToggleButton">
              <Style Selector="^:checked">
                <Setter Property="ToolTip.Tip" Value="Unpin item" />
              </Style>
              <Style Selector="^:unchecked">
                <Setter Property="ToolTip.Tip" Value="Pin item" />
              </Style>
            </Style>
            <Style Selector="ui|SymbolIcon.pin">
              <Setter Property="IsVisible" Value="False" />
            </Style>
            <Style Selector=":checked ui|SymbolIcon.pin">
              <Setter Property="IsVisible" Value="True" />
            </Style>
            <Style Selector="ui|SymbolIcon.unpin">
              <Setter Property="IsVisible" Value="True" />
            </Style>
            <Style Selector=":checked ui|SymbolIcon.unpin">
              <Setter Property="IsVisible" Value="False" />
            </Style>
          </ToggleButton.Styles>
        </ToggleButton>
      </Grid>
    </Grid>
</UserControl>